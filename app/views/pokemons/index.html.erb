<h1>Pokemon</h1>
<%= render "shared/search", { path: new_pokemon_path } %>
<div>
  <% if @pokemons.present? %>
    <% @pokemons.each do |pokemon| %>
      <div style="display: inline-block;">
        No. <%= pokemon.order %>,
        Name: <%= pokemon.name %>
        <div>
          <%= image_tag(pokemon.image_url, size: "200") %>
        </div>
        <%= link_to "逃がす", pokemon_path(pokemon), method: :delete, data: { confirm: "本当に逃しますか？" }, class: "btn btn-danger"%>
      </div>
    <% end %>
  <% end %>
</div>